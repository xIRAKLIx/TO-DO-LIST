<%- include('header'); -%>

<div id="heading" class="box">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% for (var i = 0; i < newListItems.length; i++) { %>
        <div class="item">
            <form action="/delete" method="post" class="item-form">
                <input type="checkbox">
                <p><%= newListItems[i] %></p>
                <input type="hidden" name="itemIndex" value="<%= i %>">
                <input type="hidden" name="list" value="<%= listTitle === 'Work List' ? 'work' : '' %>">
                <button type="submit" class="delete-button">ðŸ—‘</button>
            </form>
        </div>
    <% } %>
</div>

<div class="box">
    <form action="/" method="post" class="item">
        <input type="text" name="newItem" placeholder="New Item" required>
        <button class="add-btn" type="submit">+</button>
        <input type="hidden" name="list" value="<%= listTitle === 'Work List' ? 'work' : '' %>">
    </form>
</div>

<%- include('footer'); -%>